extend layout
block content
    link(rel='stylesheet', href='/css/tournaments.css')
    .content
        .card
            #tour_list
                h1 Tournaments
                h4.linkheader(onclick="showTourInfo();") Masters Cup II
            #back(onclick="showSelection();" style="display:none;") back
            #tour_info(style="display:none")
                div#timer(data-type="countdown" data-id="678699" class="tickcounter" style="width: 650px; height: 162px; margin: 0 auto")
                    a(href="//www.tickcounter.com/countdown/678699/legion-td-2-masters-cup-ii" title="Legion TD 2: Masters Cup II") Legion TD 2: Masters Cup II
                    a(href="//www.tickcounter.com/" title="Countdown") Countdown
                    script (function(d, s, id) { var js, pjs = d.getElementsByTagName(s)[0]; if (d.getElementById(id)) return; js = d.createElement(s); js.id = id; js.src = "//www.tickcounter.com/static/js/loader.js"; pjs.parentNode.insertBefore(js, pjs); }(document, "script", "tickcounter-sdk"));
                #selection
                    h4(onclick="showTeamList();") Team List
                    h4(onclick="showBracket();") Bracket
                    //h4(onclick="showCompare();") Compare Teams
                #tablewrapper(style="display:none;")
                    h4 Teams:
                    table#myladder.teamladder
                        tr
                            th(onclick="sortTable(0);") Team 
                            th(onclick="sortTable(1);") Player 1
                            th(onclick="sortTable(2);") Player 2
                            th(onclick="sortTable(3);") Elo P1
                            th(onclick="sortTable(4);") Elo P2
                            th(onclick="sortTable(5);") Team Average
                #bracket(style="display:none;")
                    iframe#bracket_frame(width="100%" frameborder="0" scrolling="auto" allowtransparency="true")
                #compare(style="display:none;")
                    #inputs
                        input#input_t1.form-control.mr-sm-2(type='text', placeholder='Name Team 1', aria-label='Search')
                        input#input_t2.form-control.mr-sm-2(type='text', placeholder='Name Team 2', aria-label='Search')
                        button.btn.btn-outline.my-sm-0(onclick="compareTeams();") Go
                        br
