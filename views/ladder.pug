extend layout
block content
    link(rel='stylesheet', href='/css/ladder.css')
    .content
        .card
            #amazon_ad
            #filter_display(onclick="expandFilters()") Show filters
            #filter-invis
                label.filter_label(onclick="getFilters();") Rank
                    input.filter_input#checkbox0(type="checkbox", name="filter", value="Rank", onclick='saveTick(0);')
                label.filter_label(onclick="getFilters();") Name
                    input.filter_input#checkbox1(type="checkbox", name="filter", value="Name", onclick='saveTick(1);')
                label.filter_label(onclick="getFilters();") Elo
                    input.filter_input#checkbox2(type="checkbox", name="filter", value="Elo", onclick='saveTick(2);')
                label.filter_label(onclick="getFilters();") Peak Elo
                    input.filter_input#checkbox3(type="checkbox", name="filter", value="Peak Elo", onclick='saveTick(3);')
                label.filter_label(onclick="getFilters();") Games
                    input.filter_input#checkbox4(type="checkbox", name="filter", value="Games", onclick='saveTick(4);')
                label.filter_label(onclick="getFilters();") Wins
                    input.filter_input#checkbox5(type="checkbox", name="filter", value="Wins", onclick='saveTick(5);')
                label.filter_label(onclick="getFilters();") Loses
                    input.filter_input#checkbox6(type="checkbox", name="filter", value="Loses", onclick='saveTick(6);')
                label.filter_label(onclick="getFilters();") Winchance
                    input.filter_input#checkbox7(type="checkbox", name="filter", value="Winchance", onclick='saveTick(25);')
                label.filter_label#selectall(onclick="selectNone()") Unselect all
            .umdieladder    
                table.ladder#myladder
                    tr.header
                        th.table_header#th0(onclick="sortTable(0)")
                        th.table_header#th1(onclick="sortTable(1)")
                        th.table_header#th2(onclick="sortTable(2)")
                        th.table_header#th3(onclick="sortTable(3)")
                        th.table_header#th4(onclick="sortTable(4)")
                        th.table_header#th5(onclick="sortTable(5)")
                        th.table_header#th6(onclick="sortTable(6)")
                        th.table_header#th7(onclick="sortTable(7)")
        script(src="/js/ladder_sort.js")
        script(src="/js/ladder.js")
        script(src="/js/cookies.js")
        script getTicks();