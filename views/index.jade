extend layout
block content
    link(rel='stylesheet', href='/css/popmotion.css')
    link(rel='stylesheet', href='/css/index.css')
    .content
        #builder
        h1 LTDStats.com - Statistics, Guides, Player Profiles and more!
        p.
        .tabmenu
            .tab_top_active#tab_top_1(onclick="javascript:openTab(1);") Profile
            .tab_top_active#tab_top_2(onclick="javascript:openTab(2);") Ladder
            .tab_top_active#tab_top_3(onclick="javascript:openTab(3);") Replay
            .tab_top_active#tab_top_4(onclick="javascript:openTab(4);") Builder
            .tab_top_active#tab_top_5(onclick="javascript:openTab(5);") Units
            .tab_top_active#tab_top_6(onclick="javascript:openTab(6);") Guides
            .tab_top_active#tab_top_7(onclick="javascript:openTab(7);") Statistics
            .style(style='clear: both;')
            .tab_box#tab_box_1
                .profile
                    b Profile
                    p.
                        Check out stats, collection and the matchhistory for your profile.
                    p
                        img(src="/img/profile.png" width="1100px")
            .tab_box#tab_box_2
                .profile
                    b Ladder
                    p.
                        Check out your rank or top 100 in the offical ladder.
                    p
                        img(src="/img/ladder.png" width="1100px")
            .tab_box#tab_box_3
                .profile
                    b Replay
                    p.
                        Look up your game for detailed information about it.
                    p
                        img(src="/img/replay.png" width="1100px")
                   
            .tab_box#tab_box_4
                .profile
                    b Builder
                    p.
                        Share your perfect build or look up top builds.
                    p
                        img(src="/img/builder.png" width="1100px")
            .tab_box#tab_box_5
                .profile
                    b Units
                    p.
                        Look up any fighter, mercanery or wave unit.
                    p
                        img(src="/img/units.png" width="1100px")
            .tab_box#tab_box_6
                .profile
                    b Guides
                    p.
                        Here you can find guides for all races and general hints.
                    p
                        img(src="/img/guides.png" width="1100px")
            .tab_box#tab_box_7
                .profile
                    b Statistics
                    p.
                        Provides you detailled statistic about specific patches/days/players or overall data.
                    p
                        img(src="/img/stats.png" width="1100px")
    script(src="/js/jquery.js")                    
    script(src="/js/tabmenu.js")
    link(rel='stylesheet', href='/css/tabmenu.css')
    script document.body.onload = function() {openTab(1)};
