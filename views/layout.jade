html
    head
        title Legion TD 2 Statistics - #{title} 
        link(rel="stylesheet", href="https://attrib.github.io/main.css")
        link(rel='stylesheet', href='/css/bootstrap.css')
        link(rel='stylesheet', href='/css/test.css')
        meta(name="revisit-after", content="2 days")
        meta(name="robots", content="index, follow")
        meta(name="page-topic", content="Gaming, Statistics")
        meta(name="keywords", content="legion, legion td, legion td 2, statistics, profile, stats, ladder, guides, ltd2, ltd, ltdtstats, ltdstats.com, legion td 2 statistics")
        meta(name="description", content="A community made platform to look up Player profiles, online ladder, guides, statistics and much more!")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        script(async src="https://www.googletagmanager.com/gtag/js?id=UA-111925592-1")
    body
        header
        .container-fluid
            nav.navbar.navbar-expand-xl.navbar-dark.fixed-top.bg-dark
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                a.navbar-brand(href='/')
                    img(src="/img/favicon.ico", width="16px", height="16px", style="margin-right:5%;margin-bottom:4%;") 
                    | LTDStats.com
                div#navbarsExampleDefault.collapse.navbar-collapse
                    ul.navbar-nav.mr-auto
                        if(title=="Home")
                            li.nav-item.active
                                a.nav-link(href='/') Home 
                        else
                            li.nav-item
                                a.nav-link(href='/') Home
                        if(title.includes("Profile")) 
                            li.nav-item.active
                                a.nav-link(href='/profile') Profile
                        else
                            li.nav-item
                                a.nav-link(href='/profile') Profile
                        if(title.includes("Ladder"))      
                            li.nav-item.dropdown.active
                                a#dropdown01.nav-link.dropdown-toggle(href='/ladder/overall', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Ladder
                                div.dropdown-menu(aria-labelledby='dropdown01')
                                    a.dropdown-item(href='/ladder/overall') Overall
                                    a.dropdown-item(href='/ladder/element') Element
                                    a.dropdown-item(href='/ladder/forsaken') Forsaken
                                    a.dropdown-item(href='/ladder/grove') Grove
                                    a.dropdown-item(href='/ladder/mech') Mech
                                    a.dropdown-item(href='/ladder/mastermind') Mastermind
                        else
                            li.nav-item.dropdown
                                a#dropdown01.nav-link.dropdown-toggle(href='/ladder/overall', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Ladder
                                div.dropdown-menu(aria-labelledby='dropdown01')
                                    a.dropdown-item(href='/ladder/overall') Overall
                                    a.dropdown-item(href='/ladder/element') Element
                                    a.dropdown-item(href='/ladder/forsaken') Forsaken
                                    a.dropdown-item(href='/ladder/grove') Grove
                                    a.dropdown-item(href='/ladder/mech') Mech
                                    a.dropdown-item(href='/ladder/mastermind') Mastermind
                        if(title=="Games")
                            li.nav-item.active
                                a.nav-link(href='/replay') Replay
                        else
                            li.nav-item
                                a.nav-link(href='/replay') Replay
                        if(title=="Compare")
                            li.nav-item.active
                                a.nav-link(href='/compare') Compare
                        else
                            li.nav-item
                                a.nav-link(href='/compare') Compare
                        if(title=="Builder")
                            li.nav-item.active
                                a.nav-link(href='/builder') Builder
                        else
                            li.nav-item
                                a.nav-link(href='/builder') Builder
                        if(title=="Units")
                            li.nav-item.active
                                a.nav-link(href='/units') Units
                        else
                            li.nav-item
                                a.nav-link(href='/units') Units
                        if(title.includes("Guide"))
                            li.nav-item.active
                                a.nav-link(href='/guides') Guides
                        else
                            li.nav-item
                                a.nav-link(href='/guides') Guides
                        if(title.includes("Stats"))
                            li.nav-item.active
                                a.nav-link(href='/stats') Stats
                        else
                            li.nav-item
                                a.nav-link(href='/stats') Stats
                        li.nav-item.dropdown
                            a#dropdown02.nav-link.dropdown-toggle(href='', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') More
                            div.dropdown-menu(aria-labelledby='dropdown02')
                                a.dropdown-item(href='/help') Help
                                a.dropdown-item(href="/feedback") Feedback & Bugs
                                a.dropdown-item(href='/cookies') Cookie Policy
                                a.dropdown-item(href='/about') About
                                a.dropdown-item(href='https://test.ltdstats.com', target="_blank") Old Website
                    if(title.includes("Profile"))
                        .form-inline.my-2.my-lg-0
                            input#playername.form-control(type='text', placeholder='Search', aria-label='Search')
                            button.btn.btn-outline-success.my-sm-0(onclick="setPlayer();") Search
                    if(title.includes("Ladder") || title.includes("Player Stats") || title.includes("Livegame") || title.includes("Units"))
                        .form-inline.my-2.my-lg-0
                            input#playername.form-control.mr-sm-2(type='text', placeholder='Search', aria-label='Search')
                            button.btn.btn-outline-success.my-2.my-sm-0(onclick="getPlayer();") Search
                    if(title.includes("Daily"))
                        .form-inline.my-2.my-lg-0
                            input#playername.form-control.mr-sm-2(type='date', placeholder='Search', aria-label='Search')
                            button.btn.btn-outline-success.my-2.my-sm-0(onclick="getPlayer();") Search
                    if(title.includes("Compare"))
                        .form-inline.my-2.my-lg-0
                            input#playername.form-control.mr-sm-2(type='text', placeholder='Player 1', aria-label='Player 1')
                            input#playername2.form-control.mr-sm-2(type='text', placeholder='Player 2', aria-label='Player 2')
                            button.btn.btn-outline-success.my-2.my-sm-0(onclick="getPlayer();") Compare
                    if(title.includes("Replay"))
                        .form-inline.my-2.my-lg-0
                            button.btn.btn-outline-success.my-2.my-sm-0(onclick="showSelect();" style="margin-right:30px;") Search a game
                            input#gameid.form-control.mr-sm-2(type='text', placeholder='Game ID', aria-label='Game ID')
                            button.btn.btn-outline-success.my-2.my-sm-0(onclick="getPlayer();") Show
                link(rel="stylesheet", type="text/css", href="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.0.3/cookieconsent.min.css")
                script(src="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.0.3/cookieconsent.min.js")
                script(src="/js/cookiemessage.js")
            #overlay
                #text Would you mind to turn off your AdBlock for this website?
                p.
                #buttons  Dont ask again
                    input#mycheck(type="checkbox")
                    button#mybutton(type="button", onclick="off();") Close
            .main-content
                block content
            footer
                div.myfooter
                    a.linkfooter(href="/about") About
                    a.linkfooter(href="/cookies") Cookie Policies
                    a.linkfooter(href="/faq") FAQ
                    a.linkfooter(href="feedback") Give Feedback
                    a.linkfooter(href="/help") Help
                script(src='https://code.jquery.com/jquery-3.1.1.min.js')
                script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js', integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q', crossorigin='anonymous')
                script(src='/js/bootstrap.js')
                script(src="/js/ads.js")
                script(src="/js/checkads.js")
                script(src="/js/cookies.js")
